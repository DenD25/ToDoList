@model IEnumerable<ToDoList.Models.TaskModel>

@{
    ViewData["Title"] = "Index";
}

<h1>To Do List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create new task!</a> |
    <a class="btn btn-secondary" asp-action="DoneList">Done tasks list</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>      
            <th>
                Created at
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width:50%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width:20%">
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td style="width:30%">
                @Html.ActionLink("Done", "End", new {  id=item.Id  }, new {@class = "btn btn-success"}) 
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }, new {@class = "btn btn-info"}) 
                @Html.ActionLink("Details", "Details", new {  id=item.Id  }, new {@class = "btn btn-warning"}) 
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id }, new {@class = "btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
